<h1>Matriculas</h1>


<h1>Cursos seleccionados</h1>

<table>
  <thead>
    <tr>
      <th>cursos seleccionados</th>
      <th>descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= link_to 'Destroy', matricula_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
